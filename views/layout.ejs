<%# comments in ejs files are written using this way %>

<%# the name of layout file should be always layout.ejs or else it will not compile and give error%>

<%# the body variable is predefined and any partial file will be added at the place of body variable %>

<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">

        <%- style %>
    </head>
    <body>
        <%- include('_header'); %>
        <main>
            <%- body %>
        </main>
        <%- include('_footer'); %>
        <%- script %>
        <script>
            <% if(flash.success && flash.success.length>0) { %>
                new Noty({
                    theme :'relax',
                    type : 'success',
                    text: '<%= flash.success %>',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();
            <% } %>

            <% if(flash.error && flash.error.length>0) {%>
                new Noty({
                    theme :'relax',
                    type : 'error',
                    text: '<%= flash.error %>',
                    layout: 'topRight',
                    timeout: 1500
                    
                }).show();
            <%}%>
        </script>
    </body>
</html>